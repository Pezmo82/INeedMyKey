<h1 class="mainHeading">Key Retrieval</h1>
    <hr class="faded" />

<div class="formWrapper">
  	<%= form_for @retrieval do |f| %>

        <div class="field">
            <%= f.label "Choose a key", class: :label %>
                <%= f.collection_select :key_id, @keys, :id, :name %>
		</div>

        <div class="actions">
   			<%= f.button "Retrieve Key", type: :submit, method: :patch, class: :button %>
		</div>
		
  	<% end %>

    <%= link_to "Back", :back, class: :formLink %>

</div>
