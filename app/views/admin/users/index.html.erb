<h1 class="mainHeading">Current Users</h1>
    <hr class="faded" />

        <%= link_to "Back", :back, class: :formLink %>

<table class="table">
        <tr>
            <th class="tableHeading">User ID</th>
            <th class="tableHeading">Email</th>
            <th class="tableHeading">Mobile</th>
            <th class="tableHeading">Rank</th>
            <th class="tableHeading">Edit</th>
            <th class="tableHeading">Delete</th>
        </tr>
    <% @Users.each do | user | %>
        <tr>
            <td class="tableValue"><%= user.id %></td>
            <td class="tableValue"><%= user.email %></td>
            <td class="tableValue"><%= user.mobile_number %></td>
            <td class="tableValue"><%= user.rank_id %></td>
            <td class="tableValue">
                <%= link_to edit_admin_user_path(user.id) do %>
                    <i class="tableIcon fa fa-2x fa-wrench"></i>
                <% end %>
            </td>
            <td class="tableValue">    
                <%= link_to admin_user_path(user.id), method: :delete, data: { confirm: "Are you sure you want to delete " + user.email } do %>
                    <i class="tableIcon fa fa-2x fa-trash"></i>
                <% end %>
        </tr>
    <% end %>
</table>
