<h1 class="mainHeading">Change location of key - <%= @key.name %></h1>
    <hr class="faded" />

<div class="formWrapper">
    <%= form_for [:admin, @key] do |f| %>

        <div class="field">
            <%= f.label :edit_location, class: :label %><br />
                <%= f.text_field :location, required: true, class: :input %>
        </div>

        <div class="actions">
            <%= f.button "Submit changes to key location", type: :submit, method: :patch, class: :button %>
        </div>
    <% end %>
    
    <%= link_to "Back", :back, class: :formLink %>
</div>
