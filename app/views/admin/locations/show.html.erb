<div class="boxWrapper group">
    <%= link_to admin_locations_authorise_path(params[:id]), class: [:box, :boxLink] do %>
        <h3 class="boxHeading">Authorise Key</h3>
            <i class="boxIcon fa fa-5x fa-plus"></i>
                <p class="boxText">Authorise a pending key storage</p>
    <% end %>
</div>

<% if @storages.blank? %>
	<h3> There are no keys stored here :(</h3>
<% else %>

	<table class="table">
			<tr>
				<th class="tableHeading">Key ID</th>
				<th class="tableHeading">Status</th>
				<th class="tableHeading">Date </th>

			</tr>
		<% @storages.each do | storage | %>
			<tr>
				<td class="tableValue"> <%= storage.key_id %> </td>
				<td class="tableValue"> <% if storage.is_stored %> Stored <% else %> Awaiting... <% end %> </td>
				<td class="tableValue"> <%= storage.updated_at %> </td>
			</tr>
		<% end %>
	</table>

<% end %>
