<h1 class="mainHeading">New Location</h1>
    <hr class="faded" />

<div class="formWrapper">
    <%= form_for @location do |f| %>
        <div class="field">
            <%= f.label :name, class: "label" %><br />
            <%= f.text_field :name, autofocus: true, required: true, class: "input" %>
            <%= f.label :address_line1, class: "label" %><br />
            <%= f.text_area :address_line1, autofocus: true, required: true, class: "input" %>
            <%= f.label :address_line2, class: "label" %><br />
            <%= f.text_field :address_line2, autofocus: true, required: true, class: "input" %>   
            <%= f.label :parish, class: "label" %><br />
            <%= f.text_field :parish, autofocus: true, class: "input" %>  
            <%= f.label :post_code, class: "label" %><br />
            <%= f.text_field :post_code, autofocus: true, required: true, class: "input" %>      
            <%= f.label :capacity, class: "label" %><br />
            <%= f.text_field :capacity, autofocus: true, required: true, class: "input" %> 
         </div>

        <div class="actions">
            <%= f.button "Add Location", type: :submit, class: "button" %>
        </div>
    <% end %>

</div>  