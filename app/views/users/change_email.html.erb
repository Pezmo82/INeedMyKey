<h1 class="mainHeading">Change Email Address</h1>
    <hr class="faded" />

<div class="formWrapper">
	<%= form_for account_change_email_path do |f| %>
		<div class="field">
			<%= f.label :current_email_address, class: :label %>
				<%= f.text_field :current_email, autofocus: true, required: true, class: :input %>
		</div>

		<div class="field">
			<%= f.label :new_email_address, class: :label %>
				<%= f.text_field :new_email, required: true, class: :input %>
		</div>

		<div class="field">
			<%= f.label :new_email_address_repeat, class: :label %>
				<%= f.text_field :new_email_repeat, required: true, class: :input %>
		</div>
        
        <div class="actions">
	  		<%= f.submit "Submit", type: :submit, class: :button %>
        </div>
    <% end %>

    <%= link_to "Back", :back, class: :formLink %>
</div>
