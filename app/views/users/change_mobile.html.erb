<h1 class="mainHeading">Change Mobile Number</h1>
    <hr class="faded" />

<div class="formWrapper">
	<%= form_for account_change_mobile_path do |f| %>
		<div class="field">
			<%= f.label :current_mobile_number, class: :label %>
				<%= f.text_field :current_mobile, autofocus: true, required: true, class: :input %>
		</div>

		<div class="field">
		  	<%= f.label :new_mobile_number, class: :label %>
				<%= f.text_field :new_mobile, required: true, class: :input %>
		</div>

		<div class="field">
		  	<%= f.label :new_mobile_number_repeat, class: :label %>
				<%= f.text_field :new_mobile_repeat, required: true, class: :input %>
		</div>
        
        <div class="actions">
	  		<%= f.submit "Submit", type: :submit, class: :button %>
        </div>
    <% end %>

    <%= link_to "Back", :back, class: :formLink %>
</div>
