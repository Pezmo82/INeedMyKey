<h1 class="mainHeading">Account</h1>
	<hr class="faded" />

<div class="boxWrapper group">

	<%= link_to user_password_path(email: current_user.email), method: :post, class: [:box, :boxLink] do %>
		<h3 class="boxHeading">Change Password</h3>
			<i class="boxIcon fa fa-5x fa-user-secret"></i>
				<p class="boxText">Send password reset instructions.</p>
	<% end %>

	<%= link_to new_key_path, class: [:box, :boxLink] do %>
		<h3 class="boxHeading">Change Email</h3>
			<i class="boxIcon fa fa-5x fa-envelope"></i>
				<p class="boxText">Change the email account used.</p>
	<% end %>

	<%= link_to new_key_path, class: [:box, :boxLink] do %>
		<h3 class="boxHeading">Change Mobile</h3>
			<i class="boxIcon fa fa-5x fa-mobile"></i>
				<p class="boxText">Change the mobile number used.</p>
	<% end %>
</div>
